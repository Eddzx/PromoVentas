<div class="banner">
    <div class="banner-container">
        <h1 class="title"><font size="10">PromoVentas</font></h1>
        <a class="btn btn-default">Crear Pedidos</a>
    </div>
</div>
<!-- Barra de navegacion secundaria -->
<div class="container">
    <nav class="nav">
        <a class="nav-item active has-text-weight-semibold" href="#">Productos</a>
        <a class="nav-item has-text-weight-semibold" href="#">Categorias</a>
    </nav>
</div>
<!-- Sección de fotografías -->
<div class="container">
